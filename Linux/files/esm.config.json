{
  "esm":
  {
    "version": "2.5",
    "website": "http://performance.comte-gaz.com",
    "check_updates": false,
    "auto_refresh": 3600,
    "theme": "blue",
    "custom_title": "My server performance"
  },
  "cpu":
  {
    "enable_temperature": true
  },
  "disk":
  {
    "show_tmpfs": false,
    "show_filesystem": false
  },
  "ping":
  {
    "hosts": 
   [
      "comte-gaz.com",
      "www.comte-gaz.com",
