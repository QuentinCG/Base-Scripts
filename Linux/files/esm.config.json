      "do-it-yourself.terreetvies.com",
      "www.do-it-yourself.terreetvies.com",
      "teamspeak.comte-gaz.com",
      "www.teamspeak.comte-gaz.com",
      "ts.comte-gaz.com",
      "www.ts.comte-gaz.com",
      "mail.comte-gaz.com",
      "www.mail.comte-gaz.com",
      "performance.comte-gaz.com",
      "www.performance.comte-gaz.com",
      "phpmyadmin.comte-gaz.com",
      "www.phpmyadmin.comte-gaz.com",
      "torrent.comte-gaz.com",
      "www.torrent.comte-gaz.com",
      "files.comte-gaz.com",
      "www.files.comte-gaz.com",
      "gitlab.comte-gaz.com",
      "www.gitlab.comte-gaz.com",
      "git.comte-gaz.com",
      "www.git.comte-gaz.com",
      "mqtt.comte-gaz.com",
      "www.mqtt.comte-gaz.com",
      "test.comte-gaz.com",
      "www.test.comte-gaz.com",
      "163.172.39.170"
    ]
  },
  "last_login":
  {
    "enable": true,
    "max": 10
  },
  "services":
  {
    "show_port": true,
    "list":
    [
      {
        "name": "Web Server (Non Secured)",
        "host": "localhost",
        "port": 80,
        "protocol": "tcp",
        "start": "sudo /etc/init.d/apache2 start",
        "stop": "sudo /etc/init.d/apache2 restart"
      },
      {
        "name": "Web Server (Secured)",
        "host": "localhost",
        "port": 443,
        "protocol": "tcp",
        "start": "sudo /etc/init.d/apache2 start",
        "stop": "sudo /etc/init.d/apache2 restart"
      },
      {
        "name": "FTP (with SSL)",
        "host": "localhost",
        "port": 2121,
        "protocol": "tcp",
        "start": "sudo /etc/init.d/proftpd start",
        "stop": "sudo /etc/init.d/proftpd stop"
      },
      {
        "name": "SSH and SFTP",
        "host": "localhost",
        "port": 50555,
        "protocol": "tcp",
        "start": "sudo /etc/init.d/ssh start",
        "stop": "sudo /etc/init.d/ssh stop"
      },
      {
        "name": "MySQL",
        "host": "localhost",
        "port": "3306",
        "protocol": "tcp",
        "start": "sudo /etc/init.d/mysql start",
        "stop": "sudo /etc/init.d/mysql stop"
      },
      {
        "name": "Teamspeak 3",
        "host": "localhost",
        "port": 10011,
        "protocol": "tcp",
        "start": "sudo /home/teamspeak/teamspeak3-server/ts3server_startscript.sh start",
        "stop": "sudo /home/teamspeak/teamspeak3-server/ts3server_startscript.sh stop"
      },
      {
        "name": "Torrent",
        "host": "localhost",
        "port": 9001,
        "protocol": "tcp",
        "start": "sudo /etc/init.d/transmission-daemon start",
        "stop": "sudo /etc/init.d/transmission-daemon stop"
      },
      {
        "name": "GitLab",
        "host": "localhost",
        "port": 1276,
        "protocol": "tcp",
        "start": "sudo gitlab-ctl start",
        "stop": "sudo gitlab-ctl stop"
      },
      {
        "name": "Mosquitto (with SSL)",
        "host": "localhost",
        "port": 8883,
        "protocol": "tcp",
        "start": "sudo /etc/init.d/mosquitto start",
        "stop": "sudo /etc/init.d/mosquitto stop"
      },
      {
        "name": "Mail (OVH IMAP)",
        "host": "ssl0.ovh.net",
        "port": 993,
        "protocol": "tcp"
      },
      {
        "name": "Mail (OVH POP)",
        "host": "ssl0.ovh.net",
        "port": 995,
        "protocol": "tcp"
      },
      {
        "name": "Mail (OVH SMTP)",
        "host": "ssl0.ovh.net",
        "port": 465,
        "protocol": "tcp"
      },
      {
        "name": "Closed default Mosquitto",
        "host": "localhost",
        "port": 1883,
        "protocol": "tcp"
      },
      {
        "name": "Closed default SSH",
        "host": "localhost",
        "port": 22,
        "protocol": "tcp"
      },
      {
        "name": "Closed default FTP",
        "host": "localhost",
        "port": 21,
        "protocol": "tcp"
      }
    ]
  }
}
